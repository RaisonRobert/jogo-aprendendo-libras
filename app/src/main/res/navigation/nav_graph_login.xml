<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_login"
    app:startDestination="@id/login">
    <fragment
        android:id="@+id/login"
        android:name="com.edu.pucpr.raison.jogoaprendendolibras.view.fragment.LoginFragment"
        android:label="Login"
        tools:layout="@layout/layout_fragment_login">
        <action
            android:id="@+id/action_login_to_criar_conta"
            app:destination="@id/criar_conta"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/criar_conta"
        android:name="com.edu.pucpr.raison.jogoaprendendolibras.view.fragment.CriarContaFragment"
        android:label="Criar Conta"
        tools:layout="@layout/layout_fragment_criar_conta"/>
</navigation>